<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF3D00"
    tools:context=".oyin_maydoni">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="Natijangiz:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView6A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Natijangiz:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:rotationX="-180"
        android:rotationY="-180"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/a_oyinchi_puani"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/b_oyinchi_puani"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:rotationX="-180"
        android:rotationY="-180"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/textView6A" />
    <TextView
        android:id="@+id/textView8A"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="10/10"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView8B"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="10/10"
        android:rotationX="-180"
        android:rotationY="-180"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="10 + 30"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView7B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:rotationX="-180"
        android:rotationY="-180"
        android:text="10 + 30"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:onClick="a_oyinchi_a"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#651FFF"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" >
        <TextView
            android:id="@+id/a_sechenek_A"
            android:layout_width="80dp"

            android:layout_height="80dp"
            android:text="000"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4B"
        android:onClick="b_oyinchi_a"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#651FFF"
        app:layout_constraintBottom_toTopOf="@+id/textView7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="30dp">
        <TextView
            android:id="@+id/a_sechenek_B"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:rotationX="-180"
            android:rotationY="-180"
            android:text="1"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:onClick="a_oyinchi_c"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00E5FF"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" >

        <TextView
            android:id="@+id/c_sechenek_A"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="000"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3B"
        android:onClick="b_oyinchi_c"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#00E5FF"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7B"
        app:layout_constraintStart_toStartOf="parent" >
        <TextView
            android:id="@+id/c_sechenek_B"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:rotationX="-180"
            android:rotationY="-180"
            android:text="1"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:onClick="a_oyinchi_b"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2979FF"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView3"
        app:layout_constraintStart_toEndOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/textView7" >
        <TextView
            android:id="@+id/b_sechenek_A"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="000"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2B"
        android:onClick="b_oyinchi_b"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#2979FF"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7B"
        app:layout_constraintEnd_toStartOf="@+id/cardView4B"
        app:layout_constraintStart_toEndOf="@+id/cardView3B" >
        <TextView
            android:id="@+id/b_sechenek_B"
            android:rotationX="-180"
            android:rotationY="-180"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>